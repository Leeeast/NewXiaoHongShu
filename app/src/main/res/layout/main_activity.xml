<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#686767"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_main_home"
            android:text="首页"
            android:drawablePadding="-5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tab_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_main_search"
            android:text="发现"
            android:drawablePadding="-5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tab_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_main_store"
            android:text="购买"
            android:drawablePadding="-5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tab_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_main_msg"
            android:text="消息"
            android:drawablePadding="-5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我"
            android:drawableTop="@drawable/tab_main_me"
            android:drawablePadding="-5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>